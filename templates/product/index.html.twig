{% extends 'base.html.twig' %}

{% block title %}Products - Beauty shop{% endblock %}

{% block content %}
<h1>Our Products</h1>

    <div class="row">
        {% for product in products %}

            <div class="col-md-4">
                <div class="product-item text-center mb-4 card" >
                    <a href="{{ path('product', {'slug': product.slug}) }}"> <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid mb-3"></a>
                    <h5>{{ product.name }}</h5>
                    <span class="product-subtitle">{{ product.subtitle }}</span>
                    <span class="product-price">{{(product.price /100 ) | number_format(2)}}â‚¬</span>


                </div>
            </div>


        {% endfor %}

    </div>


{% endblock %}
