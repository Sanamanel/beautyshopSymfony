{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}- Beauty shop{% endblock %}

{% block content %}


    <div class="row">


            <div class="col-md-5">

                    <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid mb-3">

            </div>

        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p class="">{{ product.subtitle }}</p>
            <span class="product-page-price">{{(product.price /100 ) | number_format(2)}}â‚¬</span>
            <hr>
            <p class="">{{ product.description }}</p>
            <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn btn-primary">Add to cart</a>


        </div>


    </div>
    <hr>
    <h3>Our best sellers</h3>
    <p>Discover our most popular products based on sales.</p>
    <div class="row">

        {% for product in products %}
            <div class="col-md-3">
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div><!-- /.row -->

{% endblock %}
