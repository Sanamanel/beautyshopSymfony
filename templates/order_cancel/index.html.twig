{% extends 'base.html.twig' %}

{% block title %}Error in your order!{% endblock %}

{% block content %}

    <h2>Payment Error</h2>
    <p>
        Hello <strong>{{ order.user.firstname }} {{ order.user.lastname }}</strong>,<br>
        An error occurred during processing for your order <strong>{{ order.reference }}</strong><br>
        We send you an error order confirmation by email at <strong>{{ order.user.email }}</strong>
    </p>


    <hr>
   <a class="btn btn-success" href="{{ path('order') }}">Try again</a>


{% endblock %}
